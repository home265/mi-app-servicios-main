{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "site": "mi-app-servicios-3326e",
    "source": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "frameworksBackend": {
      "region": "us-central1"
    },
    "rewrites": [
      { "source": "/api/**",        "function": "ssrmiappservicios3326e" },
      { "source": "/anuncios/**",   "function": "ssrmiappservicios3326e" },
      { "source": "**",             "function": "ssrmiappservicios3326e" }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
