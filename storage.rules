rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper: User is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper: User is the owner via path segment
    function isOwner(pathUserId) {
      return isAuthenticated() && request.auth.uid == pathUserId;
    }

    // Selfies: {userId} en la ruta es el UID del dueño.
    match /selfies/{userId}/{fileName} {
      allow read: if isOwner(userId); // Solo el dueño puede leer su selfie
      allow write: if isOwner(userId) &&
                      request.resource.size < 2 * 1024 * 1024 && // Max 2MB
                      request.resource.contentType.matches('image/.*');
      allow delete: if isOwner(userId);
    }

    // Reglas para el bucket de paginas_amarillas
    match /paginas_amarillas/{creatorId}/{allPaths=**} {
      // cualquiera puede leer/descargar
      allow read: if true;
      // subir/borrar solo el dueño
      allow write: if request.auth != null
                      && request.auth.uid == creatorId;
    }

    // ===================================================================
    // INICIO DE LA SECCIÓN AÑADIDA
    // ===================================================================
    // Reglas para las imágenes de portada de Páginas Amarillas
    match /paginas_amarillas_portadas/{creatorId}/{fileName} {
      allow read: if true; // Las portadas son públicas

      // Permite escribir o borrar solo si el usuario es el dueño de la carpeta
      allow write, delete: if isAuthenticated() && request.auth.uid == creatorId;
    }
    // ===================================================================
    // FIN DE LA SECCIÓN AÑADIDA
    // ===================================================================

    // Elementos de Anuncios: {anuncioId} es el ID del anuncio.
    match /anuncios_elementos/{anuncioId}/fondos/{fileName} {
      allow read: if true; // Suelen ser públicos
      allow write: if isAuthenticated() &&
                      get(/databases/(default)/documents/anuncios/$(anuncioId)).data.creatorId == request.auth.uid &&
                      request.resource.size < 3 * 1024 * 1024 && // Max 3MB
                      request.resource.contentType.matches('image/.*');
      allow delete: if isAuthenticated() &&
                       get(/databases/(default)/documents/anuncios/$(anuncioId)).data.creatorId == request.auth.uid;
    }

    match /anuncios_elementos/{anunciosId}/{screenIndex}/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated() &&
                      get(/databases/(default)/documents/anuncios/$(anuncioId)).data.creatorId == request.auth.uid &&
                      request.resource.size < 2 * 1024 * 1024 && // Max 2MB
                      request.resource.contentType.matches('image/.*');
      allow delete: if isAuthenticated() &&
                       get(/databases/(default)/documents/anuncios/$(anuncioId)).data.creatorId == request.auth.uid;
    }

    // SECCIÓN FINAL Y CORREGIDA (de la conversación anterior)
    // Capturas de pantalla de Anuncios
    match /capturas_anuncios/{anuncioId}/{fileName} {
      allow read: if true; // Suelen ser públicas

      // Permite subir un archivo si el usuario adjunta su ID en los metadatos
      allow write: if isAuthenticated() && request.resource.metadata.creatorId == request.auth.uid;

      // Permite borrar un archivo si el ID del usuario coincide con el 'creatorId'
      // que está guardado en los metadatos del propio archivo.
      allow delete: if isAuthenticated() && resource.metadata.creatorId == request.auth.uid;
    }

    // Si tienes CVs como archivos PDF: {userId} es el dueño del CV.
    // match /cvs/{userId}/{cvFileName} {
    //   allow read: if isOwner(userId) ||
    //                 (isAuthenticated() && (
    //                   exists(/databases/(default)/documents/prestadores/$(request.auth.uid)) ||
    //                   exists(/databases/(default)/documents/comercios/$(request.auth.uid))
    //                 ));
    //   allow write: if isOwner(userId) &&
    //                   request.resource.size < 2 * 1024 * 1024 && // Max 2MB
    //                   request.resource.contentType.matches('application/pdf');
    //   allow delete: if isOwner(userId);
    // }
  }
}